extends layout

block content
  h1 An addressbook

  #wrapper

    button#add-user Add User

    #dialog-form(title='Add new user')
      form
        p(class="validateTips") All fields required except "Notes".
        fieldset(style="text-align:right;")
          label User Id: 
          input#popupUserId(type='text', placeholder='User Id' value="" class="text ui-widget-content ui-corner-all")
          br
          label Email: 
          input#popupUserEmail(type='text', placeholder='Email')
          br
          label Full Name: 
          input#popupUserFullname(type='text', placeholder='Full Name')
          br
          label Age: 
          input#popupUserAge(type='text', placeholder='Age')
          br
          label Location: 
          input#popupUserLocation(type='text', placeholder='Location')
          br
          label Gender: 
          input#popupUserGender(type='text', placeholder='Gender')
          br
          br
          textarea#popupUserNotes(placeholder='Notes', rows='6', cols='36')
          br

          span(class="btn btn-success fileinput-button")
            i(class="glyphicon glyphicon-plus")
            span Select avata image...
            input#fileupload(type="file" name="files[]" multiple)
          #progress(class="progress")
            #progressbar(class="progress-bar progress-bar-success")
          #avatar
            #avatarImg
            input#avatarId(type='hidden')


    #userList
      table
        thead
          th UserName
          th Email
          th Delete?
        tbody


    #userInfo
      form#userInfoForm(method="post" enctype="multipart/form-data")
      fieldset(style="text-align:right;")
        legend
          h2 User Info
        #UserAvatar
        input#inputUserId(type='hidden')
        label User Id: 
        input#inputUserName(type='text', placeholder='User Id')
        br
        label Email: 
        input#inputUserEmail(type='text', placeholder='Email')
        br
        label Full Name: 
        input#inputUserFullname(type='text', placeholder='Full Name')
        br
        label Age: 
        input#inputUserAge(type='text', placeholder='Age')
        br
        label Location: 
        input#inputUserLocation(type='text', placeholder='Location')
        br
        label Gender: 
        input#inputUserGender(type='text', placeholder='Gender')
        br
        br
        textarea#textareaUserNotes(placeholder='Notes', rows='6', cols='36')
        br
        button#btnDelete Delete
        button#btnModify Modify
